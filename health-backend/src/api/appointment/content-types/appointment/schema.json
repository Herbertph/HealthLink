    "singularName": "appointment",
    "pluralName": "appointments",
    "displayName": "Appointments",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "doctorName": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "reason": {
      "type": "text"
    },
    "statusC": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Confirmed",
        "Canceled"
      ]
    },
    "users_permissions_user": {
      "type": "relation",
